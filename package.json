{
  "name": "create-html-from-js",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build": "node app.js && npm run css-build && npm run open",
    "dev": "node app.js && npm run css-watch && npm run dev-open",
    "dev-open": "concurrently \"http-server -a localhost -p 1234\"",
    "open": "concurrently \"http-server -a localhost -p 1234\" \"open http://localhost:1234/output\"",
    "css-build": "./node_modules/node-sass/bin/node-sass --output-style compressed assets/scss/main.scss > output/css/main.css",
    "css-watch": "./node_modules/node-sass/bin/node-sass --watch --recursive --output-style compressed assets/scss/main.scss > output/css/main.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "colors": "^1.3.3",
    "concurrently": "^4.1.0",
    "copy-dir": "^0.4.0",
    "http-server": "^0.11.1",
    "node-sass": "^4.11.0",
    "pretty": "^2.0.0",
    "pug": "^2.0.3"
  }
}
